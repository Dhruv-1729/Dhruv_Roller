<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B89FF6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/dhruvtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="610dp"
        android:fontFamily="@font/duru_sans"
        android:text="Dhruv Roller"
        android:textColor="#FAF8F8"
        android:textSize="44sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.246" />

    <Button
        android:id="@+id/rollerbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="526dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="85dp"
        android:backgroundTint="#e8c03c"
        android:clickable="true"
        android:onClick="rollbutton"
        android:text="Roll"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dhruvtext"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/sides"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="106dp"
        android:layout_marginTop="397dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="79dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text="  Enter # of sides here"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/rollerbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dhruvtext" />

    <TextView
        android:id="@+id/numberoutput"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="219dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="73dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="70sp"
        app:layout_constraintBottom_toTopOf="@+id/sides"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dhruvtext" />

</androidx.constraintlayout.widget.ConstraintLayout>